<resources>

    <style name="Theme.GamesLibraryApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/my_background</item>
        <item name="colorPrimaryVariant">@color/my_darker_background</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="colorControlNormal">@color/icon_color</item>

        <item name="android:windowBackground">@color/my_background</item>
    </style>
    <style name="RoundedSquare">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/my_background</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_animation_list</item>

        <item name="windowSplashScreenAnimationDuration">300</item>

        <item name="postSplashScreenTheme">@style/Theme.GamesLibraryApp</item>
    </style>
</resources>